{
  "name": "side-launcher",
  "displayName": "Side Launcher",
  "description": "Launchier in sidebar",
  "version": "0.1.21",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "side-launcher.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Side Launcher",
      "properties": {
        "sideLauncher.tasks": {
          "type": "array",
          "default": [],
          "description": "Custom task definitions for Side Launcher",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Display name for the task"
              },
              "type": {
                "type": "string",
                "default": "shell",
                "enum": [
                  "shell",
                  "shellOnVSCode"
                ],
                "description": "Task type (currently only 'shell' is supported)"
              },
              "command": {
                "type": "string",
                "description": "Command to execute"
              }
            },
            "required": [
              "label",
              "command"
            ],
            "additionalProperties": false
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sideLauncherContainer",
          "title": "Side Launcher",
          "icon": "./icon.svg"
        }
      ]
    },
    "views": {
      "sideLauncherContainer": [
        {
          "id": "sideLauncher",
          "name": "",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "update-version": "node scripts/update-version.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
